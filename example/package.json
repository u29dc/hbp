{
	"devDependencies": {
		"@babel/cli": "latest",
		"@babel/core": "latest",
		"@babel/preset-env": "latest",
		"cssnano": "latest",
		"postcss-cli": "latest",
		"postcss-import": "latest",
		"postcss-import-url": "latest",
		"postcss-mixins": "latest",
		"postcss-nested": "latest",
		"postcss-preset-env": "latest",
		"postcss-url": "latest"
	},
	"scripts": {
		"build": "npm run hugo",
		"dev": "hugo server --disableFastRender --renderToDisk  --port 1111",
		"hugo": "hugo --minify",
		"now-build": "npm run theme && npm run build",
		"theme": "git submodule add -f https://github.com/u29dc/hbp.git themes/hbp && git submodule update --rebase --remote"
	}
}
